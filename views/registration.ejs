<body>
    <div class="row d-flex align-items-center justify-content-center">
        <div id="registration_form" class="col-4">
          <form action="/addUserCredentials" method="post">
            <% if(locals.currentErrors){ %>
                <% currentErrors.forEach(function(error){ %>
                    <div class="alert alert-danger" role="alert"><%=error%></div>
                <%});%>
            <%};%>
            <% if(locals.showMsg){ %>
                <div class="alert alert-danger" role="alert"><%=showMsg%></div>
            <%};%>
        <h1> Sign up</h1>
        <div class="flex-row">
            <div class="col-md-auto mt-5">
                <label for="username" value="username"> Username:</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Dumbledore11">
            </div>
        </div>
        <div class="flex-row">
            <div class="col-md-auto mt-5">
                <label for="password" value="password">Password:</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="12345">
            </div>
        </div>
        <div class="flex-row">
            <div class="col-md-auto mt-5">
                <label for="email" value="email"> email:</label>
                <input type="text" class="form-control" name="email" id="email" placeholder="dumbledore@hogwarts.ie">
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input is-invalid" type="checkbox" value="" id="invalidCheck3" required>
                <label class="form-check-label" for="invalidCheck3">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <br>
        <button id="submitSignup" type="submit" class="btn btn-primary btn-block">Sign up!</button>
    </form>
</body>

